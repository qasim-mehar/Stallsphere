@model List<Stallsphere.Models.Entities.Stall>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&family=Roboto:wght@400;500;700&display=swap');

        :root {
            --primary: #3a86ff;
            --primary-dark: #2667cc;
            --secondary: #8338ec;
            --accent: #ff006e;
            --dark: #0f172a;
            --darker: #0a1120;
            --light: #f8fafc;
            --gradient: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            --card-bg: rgba(15, 23, 42, 0.7);
            --card-border: rgba(255, 255, 255, 0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--darker);
            color: var(--light);
            line-height: 1.6;
        }

        h1, h2, h3, h4 {
            font-weight: 600;
        }

        p {
            font-family: 'Roboto', sans-serif;
            color: rgba(255, 255, 255, 0.8);
        }

        a {
            text-decoration: none;
            display: inline-block;
        }

        ul {
            list-style: none;
        }

        /* Utility classes */
        .container {
            max-width: 1180px;
            margin-inline: auto;
            padding-inline: 20px;
            overflow: hidden;
        }

        .flex {
            display: flex;
            align-items: center;
        }

        /* Top banner */
        .top-banner {
            background: var(--gradient);
            color: white;
            padding: 10px 0;
            text-align: center;
        }

        .banner-text {
            font-weight: 500;
        }

        /* Navigation */
        .main-nav {
            padding: 20px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .company-logo img {
            width: 70px;
            height: auto;
        }

        .nav-links ul {
            gap: 30px;
        }

        .hover-link {
            color: rgba(255, 255, 255, 0.8);
            transition: color 0.3s ease;
            position: relative;
        }

            .hover-link:hover {
                color: var(--primary);
            }

            .hover-link::after {
                content: '';
                position: absolute;
                bottom: -5px;
                left: 0;
                width: 0;
                height: 2px;
                background: var(--primary);
                transition: width 0.3s ease;
            }

            .hover-link:hover::after {
                width: 100%;
            }

        /* Buttons */
        .primary-button {
            background: var(--gradient);
            color: white;
            border: none;
            border-radius: 6px;
            font-weight: 600;
            padding: 12px 24px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .primary-button:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(58, 134, 255, 0.2);
            }

        .secondary-button {
            background: rgba(255, 255, 255, 0.1);
            color: var(--light);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 6px;
            font-weight: 600;
            padding: 12px 24px;
            transition: all 0.3s ease;
        }

            .secondary-button:hover {
                background: rgba(255, 255, 255, 0.2);
                border-color: var(--primary);
                color: var(--primary);
            }

        /* Stats section */
        .stall-stats {
            display: flex;
            gap: 20px;
            margin-bottom: 30px;
        }

        .operation {
            flex: 1;
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border-radius: 12px;
            padding: 25px;
            border: 1px solid var(--card-border);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .operation:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            }

        .operation--total {
            background: linear-gradient(135deg, rgba(58, 134, 255, 0.2) 0%, rgba(131, 56, 236, 0.2) 100%);
        }

        .operation--booked {
            background: linear-gradient(135deg, rgba(67, 233, 123, 0.2) 0%, rgba(56, 249, 215, 0.2) 100%);
        }

        .operation--available {
            background: linear-gradient(135deg, rgba(112, 172, 250, 0.2) 0%, rgba(168, 64, 254, 0.2) 100%);
        }

        .operation--manage {
            background: linear-gradient(135deg, rgba(251, 194, 235, 0.2) 0%, rgba(166, 193, 238, 0.2) 100%);
        }

        .stall__value {
            font-size: 2.5rem;
            font-weight: 700;
            color: white;
            margin-top: 10px;
        }

        /* Stall cards */
        .features-section {
            padding: 40px 0;
        }

        .features-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .features-heading-text {
            font-size: 2rem;
            background: var(--gradient);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            margin-bottom: 10px;
        }

        .features-area {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .features-card {
            flex: 0 1 calc(33.333% - 20px);
            min-width: 300px;
            max-width: 400px;
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border: 1px solid var(--card-border);
            border-radius: 12px;
            padding: 20px;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
        }

            .features-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
                border-color: rgba(58, 134, 255, 0.5);
            }

            .features-card img {
                width: 100%;
                height: 150px;
                object-fit: cover;
                border-radius: 8px;
                margin-bottom: 15px;
            }

            .features-card h3 {
                font-size: 1.25rem;
                margin-bottom: 10px;
                color: white;
            }

        .tag {
            display: inline-block;
            background: rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.9);
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            margin: 5px 5px 5px 0;
        }

        /* Footer */
        footer {
            background: rgba(15, 23, 42, 0.8);
            padding: 60px 0;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .footer-container {
            display: flex;
            flex-wrap: wrap;
            gap: 40px;
        }

        .link-column {
            flex: 1;
            min-width: 200px;
        }

            .link-column h4 {
                font-size: 1.1rem;
                margin-bottom: 20px;
                color: white;
                position: relative;
                padding-bottom: 10px;
            }

                .link-column h4::after {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    width: 40px;
                    height: 2px;
                    background: var(--gradient);
                }

            .link-column a {
                color: rgba(255, 255, 255, 0.7);
                margin-bottom: 10px;
                transition: color 0.3s ease;
            }

                .link-column a:hover {
                    color: var(--primary);
                }

        /* Subfooter */
        .subfooter {
            background: rgba(15, 23, 42, 0.9);
            padding: 20px 0;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .subfooter-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        .subfooter a {
            color: rgba(255, 255, 255, 0.7);
            transition: color 0.3s ease;
        }

            .subfooter a:hover {
                color: var(--primary);
            }

        /* Weather card */
        .weather-card {
            background: rgba(255, 255, 255, 0.05);
            padding: 15px;
            border-radius: 8px;
            margin-top: 10px;
        }

            .weather-card h4 {
                font-size: 1rem;
                margin-bottom: 5px;
            }

            .weather-card p {
                font-size: 0.9rem;
                margin-bottom: 3px;
            }

        /* Action boxes */
        .action-boxes {
            display: flex;
            gap: 20px;
            margin-bottom: 30px;
        }

        .action-box {
            flex: 1;
            min-width: 300px;
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border-radius: 12px;
            padding: 25px;
            border: 1px solid var(--card-border);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .action-box:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .stall-stats {
                flex-direction: column;
            }

            .action-boxes {
                flex-direction: column;
            }

            .features-card {
                flex: 1 1 100%;
                max-width: 100%;
            }
        }
    </style>
</head>
<body>
    <!-- top banner -->
    <div class="top-banner">
        <div class="container">
            <div class="banner-text">🥳 Welcome Admin! Instant Stall managing is Now Live on Stallsphere!</div>
        </div>
    </div>

    <!-- nav bar -->
    <nav>
        <div class="container main-nav flex">
            <a href="#" class="company-logo">
                <img src="/assets/logo_numlresize.png" alt="company logo">
            </a>
            <div class="nav-links" id="nav-links">
                <ul class="flex">
                    <li>
                        <a href="@Url.Action("Logout", "AdminDashboard")"
                           class="primary-button flex items-center gap-5">
                            <i class="fas fa-sign-out-alt"></i>
                            Logout
                        </a>

                    </li>
                    <li><a href="#" class="hover-link">Products</a></li>
                    <li><a href="#" class="hover-link">Customer</a></li>
                    <li><a href="#" class="hover-link">Pricing</a></li>
                    <li><a href="#" class="hover-link">Resources</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="app">
        <div class="stall-stats">
            <div class="operation operation--total">
                <h2>Total Stalls</h2>
                <p class="stall__value">@ViewBag.TotalStalls</p>
            </div>

            <div class="operation operation--booked">
                <h2>Stalls Booked</h2>
                <p class="stall__value">@ViewBag.BookedStalls</p>
            </div>

            <div class="operation operation--available">
                <h2>Stalls Available</h2>
                <p class="stall__value">@ViewBag.AvailableStalls</p>
            </div>
        </div>

        <div class="action-boxes">
            <div class="action-box operation--manage">
                <h2>Manage Stalls</h2>
                <p>View and manage all stall bookings</p>
                <a asp-action="addStallEventListner" class="btn secondary-button">Add</a>
            </div>
            <div class="action-box operation--manage">
                <h2>Weather Information</h2>
                @if (ViewBag.Weather != null)
                {
                    <div class="weather-card">
                        <h4>Weather in Islamabad</h4>
                        <p><strong>Temperature:</strong> @ViewBag.Weather.main.temp&nbsp;°C</p>
                        <p><strong>Condition:</strong> @ViewBag.Weather.weather[0].description</p>
                    </div>
                }
                else
                {
                    <p>Weather data is currently unavailable.</p>
                }
            </div>
        </div>
    </main>

    <section class="features-section">
        <div class="container">
            <div class="features-header">
                <h2 class="features-heading-text">Already Booked Stalls</h2>
            </div>
            <div class="features-area flex">
                @foreach (var stall in Model.Where(s => s.Status != null && s.Status.Trim().Equals("Booked", StringComparison.OrdinalIgnoreCase)))
                {
                    <div class="features-card flex">
                        <img src="@stall.ImgSrc" alt="Stall Image">
                        <h3>Stall @stall.StallNo</h3>
                        <span class="tag">@stall.Price.ToString("N0") PKR</span>
                        <p>@stall.Description</p>
                        <span class="tag">Best for: @stall.BestFor</span>
                        <span class="tag">Location: @stall.LocationArea</span>
                        <span class="tag">Area: @stall.Area sq.ft</span>
                        <a href="@Url.Action("EditStall", "AdminDashboard", new { id = stall.StallId })" class="secondary-button">Edit <i class="fas fa-edit"></i></a>
                    </div>
                }
            </div>
        </div>
    </section>

    <section class="features-section">
        <div class="container">
            <div class="features-header">
                <h2 class="features-heading-text">Available Stalls for Rent</h2>
            </div>
            <div class="features-area flex">
                @foreach (var stall in Model.Where(s => s.Status != null && s.Status.Trim().Equals("Available", StringComparison.OrdinalIgnoreCase)))
                {
                    <div class="features-card flex">
                        <img src="@stall.ImgSrc" alt="Stall Image">
                        <h3>Stall @stall.StallNo</h3>
                        <span class="tag">@stall.Price.ToString("N0") PKR</span>
                        <p>@stall.Description</p>
                        <span class="tag">Best for: @stall.BestFor</span>
                        <span class="tag">Location: @stall.LocationArea</span>
                        <span class="tag">Area: @stall.Area sq.ft</span>
                        <a href="@Url.Action("EditStall", "AdminDashboard", new { id = stall.StallId })" class="secondary-button">Edit <i class="fas fa-edit"></i></a>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- footer -->
    <footer>
        <div class="container footer-container">
            <a href="#" class="company-logo">
                <img src="/assets/logo_numlresize.png" alt="company logo">
            </a>
            <div class="link-column">
                <h4>Product</h4>
                <a href="#" class="hover-link">Overview</a>
                <a href="#" class="hover-link">Pricing</a>
                <a href="#" class="hover-link">Usability Hub</a>
                <a href="#" class="hover-link">Customers Page</a>
                <a href="#" class="hover-link">Status Page</a>
            </div>
            <div class="link-column">
                <h4>Methodology</h4>
                <a href="#" class="hover-link">Overview</a>
                <a href="#" class="hover-link">Pricing</a>
                <a href="#" class="hover-link">Usability Hub</a>
                <a href="#" class="hover-link">Customers Page</a>
                <a href="#" class="hover-link">Status Page</a>
            </div>
            <div class="link-column">
                <h4>Resources</h4>
                <a href="#" class="hover-link">Overview</a>
                <a href="#" class="hover-link">Pricing</a>
                <a href="#" class="hover-link">Usability Hub</a>
                <a href="#" class="hover-link">Customers Page</a>
                <a href="#" class="hover-link">Status Page</a>
            </div>
        </div>
    </footer>

    <!-- subfooter -->
    <div class="subfooter">
        <div class="container subfooter-container">
            <a class="hover-link" href="#">Privacy policy</a>
            <a class="hover-link" href="#">Terms & Condition</a>
            <a class="hover-link" href="#">Security Information</a>
            <a class="hover-link" href="#"><i class="fab fa-facebook"></i></a>
            <a class="hover-link" href="#"><i class="fab fa-twitter"></i></a>
        </div>
    </div>
</body>
</html>