@model Stallsphere.Models.ViewModels.InvoiceViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Stall Invoice</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

        /* Default dark theme */
        body {
            font-family: 'Poppins', sans-serif;
            background: #111827;
            color: #f3f4f6;
        }

        .invoice-card {
            background: #1f2937;
            box-shadow: 0 10px 30px rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .header-gradient {
            background: linear-gradient(90deg, #3b82f6 0%, #1d4ed8 100%);
        }

        .divider {
            height: 2px;
            background: linear-gradient(90deg, rgba(59, 130, 246, 0) 0%, #3b82f6 50%, rgba(59, 130, 246, 0) 100%);
        }

        .info-card {
            background: #374151;
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .highlight-text {
            background: linear-gradient(90deg, #3b82f6 0%, #1d4ed8 100%);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        /* Light Theme Override (for users who prefer light mode) */
        @@media (prefers-color-scheme: light) {
            body

        {
            background: linear-gradient(135deg, #f0f8ff 0%, #e6f2ff 100%);
            color: #111827;
        }

        .invoice-card {
            background: linear-gradient(to bottom right, #ffffff 0%, #f8fbff 50%, #e6f0ff 100%);
            box-shadow: 0 10px 30px rgba(0, 82, 204, 0.1);
            border: 1px solid rgba(173, 216, 230, 0.3);
        }

        .info-card {
            background: rgba(255, 255, 255, 0.7);
            border: 1px solid rgba(173, 216, 230, 0.5);
        }

        .highlight-text {
            background: linear-gradient(90deg, #1a73e8 0%, #0d47a1 100%);
            color: transparent;
        }

        }
    </style>
</head>
<body class="min-h-screen flex items-center justify-center p-4 bg-gray-900">
    <div class="invoice-card max-w-4xl w-full rounded-2xl overflow-hidden shadow-xl">
        <!-- Header -->
        <div class="header-gradient p-6 text-white">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold">STALL RENTAL INVOICE</h1>
                    <p class="text-blue-100 mt-1">Transaction #STL-@DateTime.Now.ToString("yyyyMMddHHmm")</p>
                </div>
                <div class="text-right">
                    <p class="text-blue-100">Issued Date</p>
                    <p class="font-medium">@DateTime.Now.ToString("dd MMM yyyy")</p>
                </div>
            </div>
        </div>

        <!-- Success Message -->
        <div class="p-6 bg-blue-900/20 flex items-center">
            <div class="bg-green-500 text-white p-3 rounded-full mr-4">
                <i class="fas fa-check-circle text-xl"></i>
            </div>
            <div>
                <h3 class="text-xl font-semibold text-blue-100">Rental Confirmed!</h3>
                <p class="text-blue-200">Your stall has been successfully rented.</p>
            </div>
        </div>

        <!-- Two Column Layout -->
        <div class="grid md:grid-cols-2 gap-6 p-6">
            <!-- Renter Info -->
            <div class="info-card rounded-xl p-6">
                <div class="flex items-center mb-4">
                    <div class="bg-blue-900/50 p-3 rounded-full mr-3">
                        <i class="fas fa-user text-blue-300"></i>
                    </div>
                    <h2 class="text-xl font-semibold text-blue-200">Renter Details</h2>
                </div>
                <div class="space-y-3 text-blue-200">
                    <div class="flex items-center"><i class="fas fa-user-tag w-6 text-blue-400"></i><p class="ml-2"><strong>Name:</strong> @Model.Renter.Name</p></div>
                    <div class="flex items-center"><i class="fas fa-phone w-6 text-blue-400"></i><p class="ml-2"><strong>Contact:</strong> @Model.Renter.ContactNo</p></div>
                    <div class="flex items-center"><i class="fas fa-id-card w-6 text-blue-400"></i><p class="ml-2"><strong>CNIC:</strong> @Model.Renter.CNIC</p></div>
                    <div class="flex items-center"><i class="fas fa-building w-6 text-blue-400"></i><p class="ml-2"><strong>Business:</strong> @Model.Renter.BusinessName</p></div>
                    <div class="flex items-start"><i class="fas fa-map-marker-alt w-6 text-blue-400 mt-1"></i><p class="ml-2"><strong>Address:</strong> @Model.Renter.Address</p></div>
                </div>
            </div>

            <!-- Stall Info -->
            <div class="info-card rounded-xl p-6">
                <div class="flex items-center mb-4">
                    <div class="bg-blue-900/50 p-3 rounded-full mr-3">
                        <i class="fas fa-store text-blue-300"></i>
                    </div>
                    <h2 class="text-xl font-semibold text-blue-200">Stall Details</h2>
                </div>
                <div class="space-y-3 text-blue-200">
                    <div class="flex items-center"><i class="fas fa-hashtag w-6 text-blue-400"></i><p class="ml-2"><strong>Stall No:</strong> @Model.Stall.StallNo</p></div>
                    <div class="flex items-center"><i class="fas fa-tag w-6 text-blue-400"></i><p class="ml-2"><strong>Best For:</strong> @Model.Stall.BestFor</p></div>
                    <div class="flex items-center"><i class="fas fa-map-marked-alt w-6 text-blue-400"></i><p class="ml-2"><strong>Location:</strong> @Model.Stall.LocationArea</p></div>
                    <div class="flex items-center"><i class="fas fa-ruler-combined w-6 text-blue-400"></i><p class="ml-2"><strong>Area:</strong> @Model.Stall.Area sq.ft</p></div>
                    <div class="flex items-center"><i class="fas fa-check-circle w-6 text-blue-400"></i><p class="ml-2"><strong>Status:</strong> <span class="bg-green-900/50 text-green-200 px-2 py-1 rounded-full text-xs">Active</span></p></div>
                </div>
            </div>
        </div>

        <!-- Summary Section -->
        <div class="p-6">
            <div class="info-card rounded-xl p-6">
                <h2 class="text-xl font-semibold text-blue-200 mb-4">Rental Summary</h2>
                <div class="grid grid-cols-3 gap-4 text-center mb-4">
                    <div class="bg-blue-900/30 p-3 rounded-lg">
                        <p class="text-blue-400 font-medium">Start Date</p>
                        <p class="text-blue-100 font-semibold">@Model.Renter.StartingDate.ToString("dd MMM yyyy")</p>
                    </div>
                    <div class="bg-blue-900/30 p-3 rounded-lg">
                        <p class="text-blue-400 font-medium">End Date</p>
                        <p class="text-blue-100 font-semibold">@Model.Renter.EndingDate.ToString("dd MMM yyyy")</p>
                    </div>
                    <div class="bg-blue-900/30 p-3 rounded-lg">
                        <p class="text-blue-400 font-medium">Monthly Rent</p>
                        <p class="text-blue-100 font-semibold">PKR @Model.Stall.Price.ToString("N0")</p>
                    </div>
                </div>
                <div class="divider my-4"></div>
                <div class="flex justify-between items-center">
                    <div>
                        <h3 class="text-lg font-semibold text-blue-200">Total Rent</h3>
                        <p class="text-blue-400">(@Model.Renter.StartingDate.ToShortDateString() to @Model.Renter.EndingDate.ToShortDateString())</p>
                    </div>
                    <div class="text-right">
                        <p class="text-blue-400">Total</p>
                        <p class="text-2xl font-bold highlight-text">
                            PKR @Model.Stall.Price.ToString("N0")
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="bg-blue-900/20 p-6 flex flex-col md:flex-row justify-between items-center">
            <div class="mb-4 md:mb-0">
                <p class="text-blue-300">Thank you for your business!</p>
                <p class="text-blue-400 text-sm">StallSphere Management</p>
            </div>
            <div class="flex space-x-3">
                <a href="@Url.Action("Dashboard", "UserDashboard")" class="px-6 py-2 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 transition inline-flex items-center">
                    <i class="fas fa-check-circle mr-2"></i> OK
                </a>
            </div>
        </div>
    </div>
</body>
</html>