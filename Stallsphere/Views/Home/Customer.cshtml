@{
    ViewData["Title"] = "Our Valued Customers";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] | Stallsphere</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #3a86ff;
            --primary-dark: #2667cc;
            --secondary: #8338ec;
            --accent: #ff006e;
            --dark: #0f172a;
            --darker: #0a1120;
            --light: #f8fafc;
            --gradient: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            --card-bg: rgba(15, 23, 42, 0.7);
            --card-border: rgba(255, 255, 255, 0.1);
        }

        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, var(--darker) 0%, var(--dark) 50%, var(--primary-dark) 100%);
            min-height: 100vh;
            margin: 0;
            padding: 0;
            color: var(--light);
            overflow-x: hidden;
        }

        .hero-gradient {
            background: linear-gradient(135deg, rgba(58, 134, 255, 0.15) 0%, rgba(131, 56, 236, 0.15) 100%);
        }

        .customer-card {
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            border: 1px solid var(--card-border);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            transform-style: preserve-3d;
        }

            .customer-card:hover {
                transform: translateY(-10px) scale(1.02);
                box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
                border-color: rgba(58, 134, 255, 0.3);
            }

        .customer-logo {
            transition: all 0.5s ease;
            filter: grayscale(30%) brightness(0.9);
            max-height: 80px;
            max-width: 180px;
        }

        .customer-card:hover .customer-logo {
            filter: grayscale(0%) brightness(1.1);
            transform: scale(1.1);
        }

        .glow-text {
            text-shadow: 0 0 10px rgba(58, 134, 255, 0.5);
        }

        .floating {
            animation: floating 6s ease-in-out infinite;
        }

        .delay-1 {
            animation-delay: 0.5s;
        }

        .delay-2 {
            animation-delay: 1s;
        }

        .delay-3 {
            animation-delay: 1.5s;
        }

        @@keyframes floating {
            0% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-15px);
            }

            100% {
                transform: translateY(0px);
            }
        }

        .fade-in {
            animation: fadeIn 1s ease-in forwards;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .grid-item {
            opacity: 0;
            animation: fadeIn 0.5s ease-in forwards;
        }

        @@keyframes gridItemAppear {
            0% {
                opacity: 0;
                transform: scale(0.8);
            }

            100% {
                opacity: 1;
                transform: scale(1);
            }
        }

        .grid-animation {
            animation: gridItemAppear 0.6s ease-out forwards;
        }
    </style>
</head>
<body class="relative">
    <!-- Floating decorative elements -->
    <div class="absolute top-20 left-10 w-16 h-16 rounded-full bg-blue-900 opacity-20 floating"></div>
    <div class="absolute top-1/3 right-20 w-24 h-24 rounded-full bg-purple-800 opacity-15 floating delay-1"></div>
    <div class="absolute bottom-1/4 left-1/4 w-20 h-20 rounded-full bg-blue-700 opacity-10 floating delay-2"></div>

    <div class="container mx-auto px-4 py-16 sm:px-6 lg:px-8">
        <!-- Hero Section -->
        <div class="hero-gradient rounded-3xl p-8 md:p-12 mb-16 text-center fade-in">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 glow-text">
                Our <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-500">Valued Customers</span>
            </h1>
            <p class="text-xl text-gray-300 max-w-3xl mx-auto">
                We're proud to partner with industry leaders and innovative startups across multiple sectors.
                Here are some of the amazing companies that trust our solutions.
            </p>
        </div>

        <!-- Customers Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mb-20">
            <!-- Customer 1 -->
            <div class="customer-card p-8 flex flex-col items-center justify-center grid-item" style="animation-delay: 0.1s">
                <img src="https://via.placeholder.com/180x80/3a86ff/ffffff?text=TechCorp" alt="TechCorp" class="customer-logo mb-6">
                <h3 class="text-xl font-bold mb-2">TechCorp</h3>
                <p class="text-gray-300 text-center mb-4">Enterprise Technology Solutions</p>
                <div class="flex space-x-2">
                    <span class="text-xs px-2 py-1 bg-blue-900 bg-opacity-50 rounded-full">Since 2018</span>
                    <span class="text-xs px-2 py-1 bg-purple-900 bg-opacity-50 rounded-full">Premium Partner</span>
                </div>
            </div>

            <!-- Customer 2 -->
            <div class="customer-card p-8 flex flex-col items-center justify-center grid-item" style="animation-delay: 0.2s">
                <img src="https://via.placeholder.com/180x80/8338ec/ffffff?text=GreenFoods" alt="GreenFoods" class="customer-logo mb-6">
                <h3 class="text-xl font-bold mb-2">GreenFoods</h3>
                <p class="text-gray-300 text-center mb-4">Organic Food Marketplace</p>
                <div class="flex space-x-2">
                    <span class="text-xs px-2 py-1 bg-blue-900 bg-opacity-50 rounded-full">Since 2020</span>
                    <span class="text-xs px-2 py-1 bg-green-900 bg-opacity-50 rounded-full">Fast Growth</span>
                </div>
            </div>

            <!-- Customer 3 -->
            <div class="customer-card p-8 flex flex-col items-center justify-center grid-item" style="animation-delay: 0.3s">
                <img src="https://via.placeholder.com/180x80/ff006e/ffffff?text=StyleHub" alt="StyleHub" class="customer-logo mb-6">
                <h3 class="text-xl font-bold mb-2">StyleHub</h3>
                <p class="text-gray-300 text-center mb-4">Fashion & Lifestyle Retail</p>
                <div class="flex space-x-2">
                    <span class="text-xs px-2 py-1 bg-blue-900 bg-opacity-50 rounded-full">Since 2019</span>
                    <span class="text-xs px-2 py-1 bg-pink-900 bg-opacity-50 rounded-full">Top Performer</span>
                </div>
            </div>

            <!-- Customer 4 -->
            <div class="customer-card p-8 flex flex-col items-center justify-center grid-item" style="animation-delay: 0.4s">
                <img src="https://via.placeholder.com/180x80/3a86ff/ffffff?text=BuildRight" alt="BuildRight" class="customer-logo mb-6">
                <h3 class="text-xl font-bold mb-2">BuildRight</h3>
                <p class="text-gray-300 text-center mb-4">Construction Materials</p>
                <div class="flex space-x-2">
                    <span class="text-xs px-2 py-1 bg-blue-900 bg-opacity-50 rounded-full">Since 2017</span>
                    <span class="text-xs px-2 py-1 bg-yellow-900 bg-opacity-50 rounded-full">Long-term Partner</span>
                </div>
            </div>

            <!-- Customer 5 -->
            <div class="customer-card p-8 flex flex-col items-center justify-center grid-item" style="animation-delay: 0.5s">
                <img src="https://via.placeholder.com/180x80/8338ec/ffffff?text=HealthPlus" alt="HealthPlus" class="customer-logo mb-6">
                <h3 class="text-xl font-bold mb-2">HealthPlus</h3>
                <p class="text-gray-300 text-center mb-4">Healthcare Services</p>
                <div class="flex space-x-2">
                    <span class="text-xs px-2 py-1 bg-blue-900 bg-opacity-50 rounded-full">Since 2021</span>
                    <span class="text-xs px-2 py-1 bg-red-900 bg-opacity-50 rounded-full">Strategic Partner</span>
                </div>
            </div>

            <!-- Customer 6 -->
            <div class="customer-card p-8 flex flex-col items-center justify-center grid-item" style="animation-delay: 0.6s">
                <img src="https://via.placeholder.com/180x80/ff006e/ffffff?text=EduSmart" alt="EduSmart" class="customer-logo mb-6">
                <h3 class="text-xl font-bold mb-2">EduSmart</h3>
                <p class="text-gray-300 text-center mb-4">Educational Technology</p>
                <div class="flex space-x-2">
                    <span class="text-xs px-2 py-1 bg-blue-900 bg-opacity-50 rounded-full">Since 2022</span>
                    <span class="text-xs px-2 py-1 bg-indigo-900 bg-opacity-50 rounded-full">Innovation Leader</span>
                </div>
            </div>
        </div>

        <!-- Testimonials Section -->
        <div class="max-w-4xl mx-auto mb-20 fade-in" style="animation-delay: 0.7s">
            <h2 class="text-3xl font-bold text-center mb-12 glow-text">
                What Our <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-500">Customers Say</span>
            </h2>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- Testimonial 1 -->
                <div class="customer-card p-8 relative">
                    <div class="absolute -top-4 -left-4 text-5xl text-blue-400 opacity-20">"</div>
                    <p class="text-lg italic mb-6">"Stallsphere transformed our retail operations with their innovative stall management system. The platform is intuitive and has significantly improved our efficiency."</p>
                    <div class="flex items-center">
                        <div class="w-12 h-12 rounded-full bg-blue-900 mr-4 flex items-center justify-center text-blue-400">
                            <i class="fas fa-user text-xl"></i>
                        </div>
                        <div>
                            <h4 class="font-bold">Sarah Johnson</h4>
                            <p class="text-sm text-gray-400">CEO, StyleHub</p>
                        </div>
                    </div>
                </div>

                <!-- Testimonial 2 -->
                <div class="customer-card p-8 relative">
                    <div class="absolute -top-4 -left-4 text-5xl text-purple-400 opacity-20">"</div>
                    <p class="text-lg italic mb-6">"The analytics and reporting features have given us invaluable insights into our marketplace performance. Highly recommend their solutions."</p>
                    <div class="flex items-center">
                        <div class="w-12 h-12 rounded-full bg-purple-900 mr-4 flex items-center justify-center text-purple-400">
                            <i class="fas fa-user text-xl"></i>
                        </div>
                        <div>
                            <h4 class="font-bold">Michael Chen</h4>
                            <p class="text-sm text-gray-400">COO, GreenFoods</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- CTA Section -->
        <div class="text-center fade-in" style="animation-delay: 0.8s">
            <h2 class="text-3xl font-bold mb-6 glow-text">Ready to Join Our Growing Family?</h2>
            <p class="text-xl text-gray-300 max-w-2xl mx-auto mb-8">Become part of our success story and let's grow together.</p>
            <button class="px-8 py-4 bg-gradient-to-r from-blue-500 to-purple-600 text-white font-bold rounded-xl hover:from-blue-600 hover:to-purple-700 transition-all transform hover:scale-105 shadow-lg">
                Get Started Today
                <i class="fas fa-arrow-right ml-2"></i>
            </button>
        </div>
    </div>

    <script>
        // Simple animation trigger for grid items
        document.addEventListener('DOMContentLoaded', function() {
            const gridItems = document.querySelectorAll('.grid-item');
            gridItems.forEach((item, index) => {
                item.style.animationDelay = `${index * 0.1 + 0.3}s`;
            });
        });
    </script>
</body>
</html>