@{
    ViewData["Title"] = "Pricing Plans";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] | Stallsphere</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #3a86ff;
            --primary-dark: #2667cc;
            --secondary: #8338ec;
            --accent: #ff006e;
            --dark: #0f172a;
            --darker: #0a1120;
            --light: #f8fafc;
            --gradient: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            --card-bg: rgba(15, 23, 42, 0.7);
            --card-border: rgba(255, 255, 255, 0.1);
        }

        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, var(--darker) 0%, var(--dark) 50%, var(--primary-dark) 100%);
            min-height: 100vh;
            margin: 0;
            padding: 0;
            color: var(--light);
            overflow-x: hidden;
        }

        .hero-gradient {
            background: linear-gradient(135deg, rgba(58, 134, 255, 0.15) 0%, rgba(131, 56, 236, 0.15) 100%);
        }

        .pricing-card {
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            border: 1px solid var(--card-border);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

            .pricing-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
                border-color: rgba(58, 134, 255, 0.3);
            }

        .popular-plan {
            position: relative;
            border: 2px solid var(--primary);
            box-shadow: 0 0 30px rgba(58, 134, 255, 0.3);
        }

        .popular-badge {
            position: absolute;
            top: -15px;
            right: 20px;
            background: var(--gradient);
            color: white;
            padding: 0.25rem 1rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 600;
            animation: pulse 2s infinite;
        }

        .feature-item {
            transition: all 0.3s ease;
        }

            .feature-item:hover {
                color: var(--primary);
                transform: translateX(5px);
            }

        .glow-text {
            text-shadow: 0 0 10px rgba(58, 134, 255, 0.5);
        }

        .floating {
            animation: floating 6s ease-in-out infinite;
        }

        .delay-1 {
            animation-delay: 0.5s;
        }

        .delay-2 {
            animation-delay: 1s;
        }

        .delay-3 {
            animation-delay: 1.5s;
        }

        @@keyframes floating {
            0% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-15px);
            }

            100% {
                transform: translateY(0px);
            }
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }

            100% {
                transform: scale(1);
            }
        }

        .fade-in {
            animation: fadeIn 1s ease-in forwards;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .toggle-bg {
            background: rgba(15, 23, 42, 0.5);
        }

        .toggle-checkbox:checked {
            right: 0;
            background-color: var(--primary);
        }

            .toggle-checkbox:checked + .toggle-label {
                background-color: rgba(58, 134, 255, 0.2);
            }
    </style>
</head>
<body class="relative">
    <!-- Floating decorative elements -->
    <div class="absolute top-20 left-10 w-16 h-16 rounded-full bg-blue-900 opacity-20 floating"></div>
    <div class="absolute top-1/3 right-20 w-24 h-24 rounded-full bg-purple-800 opacity-15 floating delay-1"></div>
    <div class="absolute bottom-1/4 left-1/4 w-20 h-20 rounded-full bg-blue-700 opacity-10 floating delay-2"></div>

    <div class="container mx-auto px-4 py-16 sm:px-6 lg:px-8">
        <!-- Hero Section -->
        <div class="hero-gradient rounded-3xl p-8 md:p-12 mb-16 text-center fade-in">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 glow-text">
                Simple, <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-500">Transparent</span> Pricing
            </h1>
            <p class="text-xl text-gray-300 max-w-3xl mx-auto">
                Choose the perfect plan for your business needs. Scale up or down as needed.
            </p>

            <!-- Toggle switch -->
            <div class="flex items-center justify-center mt-8">
                <span class="mr-4 text-gray-300">Monthly</span>
                <div class="relative inline-block w-16 mr-4 align-middle select-none">
                    <input type="checkbox" id="toggle" class="toggle-checkbox absolute block w-6 h-6 rounded-full bg-white border-4 appearance-none cursor-pointer" />
                    <label for="toggle" class="toggle-label block overflow-hidden h-6 rounded-full toggle-bg cursor-pointer"></label>
                </div>
                <span class="text-gray-300">Annual <span class="text-blue-400">(Save 20%)</span></span>
            </div>
        </div>

        <!-- Pricing Plans -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
            <!-- Basic Plan -->
            <div class="pricing-card p-8 fade-in" style="animation-delay: 0.2s">
                <div class="mb-6">
                    <h3 class="text-2xl font-bold mb-2">Starter</h3>
                    <p class="text-gray-400">Perfect for small businesses</p>
                </div>
                <div class="mb-8">
                    <span class="text-4xl font-bold">PKR 5,000</span>
                    <span class="text-gray-400">/month</span>
                </div>
                <button class="w-full py-3 px-4 border border-blue-500 text-blue-400 font-medium rounded-lg hover:bg-blue-900 hover:bg-opacity-20 transition-all mb-8">
                    Get Started
                </button>
                <ul class="space-y-4">
                    <li class="feature-item flex items-center">
                        <i class="fas fa-check-circle text-green-400 mr-3"></i>
                        <span>Up to 5 stalls</span>
                    </li>
                    <li class="feature-item flex items-center">
                        <i class="fas fa-check-circle text-green-400 mr-3"></i>
                        <span>Basic analytics</span>
                    </li>
                    <li class="feature-item flex items-center">
                        <i class="fas fa-check-circle text-green-400 mr-3"></i>
                        <span>Email support</span>
                    </li>
                    <li class="feature-item flex items-center text-gray-500">
                        <i class="fas fa-times-circle text-gray-600 mr-3"></i>
                        <span>Advanced reporting</span>
                    </li>
                    <li class="feature-item flex items-center text-gray-500">
                        <i class="fas fa-times-circle text-gray-600 mr-3"></i>
                        <span>Priority support</span>
                    </li>
                </ul>
            </div>

            <!-- Popular Plan -->
            <div class="pricing-card p-8 popular-plan fade-in relative" style="animation-delay: 0.3s">
                <div class="popular-badge">MOST POPULAR</div>
                <div class="mb-6">
                    <h3 class="text-2xl font-bold mb-2">Professional</h3>
                    <p class="text-gray-400">For growing businesses</p>
                </div>
                <div class="mb-8">
                    <span class="text-4xl font-bold">PKR 12,000</span>
                    <span class="text-gray-400">/month</span>
                </div>
                <button class="w-full py-3 px-4 bg-gradient-to-r from-blue-500 to-purple-600 text-white font-medium rounded-lg hover:from-blue-600 hover:to-purple-700 transition-all transform hover:scale-105 mb-8">
                    Get Started
                </button>
                <ul class="space-y-4">
                    <li class="feature-item flex items-center">
                        <i class="fas fa-check-circle text-green-400 mr-3"></i>
                        <span>Up to 20 stalls</span>
                    </li>
                    <li class="feature-item flex items-center">
                        <i class="fas fa-check-circle text-green-400 mr-3"></i>
                        <span>Advanced analytics</span>
                    </li>
                    <li class="feature-item flex items-center">
                        <i class="fas fa-check-circle text-green-400 mr-3"></i>
                        <span>24/7 email support</span>
                    </li>
                    <li class="feature-item flex items-center">
                        <i class="fas fa-check-circle text-green-400 mr-3"></i>
                        <span>Advanced reporting</span>
                    </li>
                    <li class="feature-item flex items-center text-gray-500">
                        <i class="fas fa-times-circle text-gray-600 mr-3"></i>
                        <span>Priority support</span>
                    </li>
                </ul>
            </div>

            <!-- Enterprise Plan -->
            <div class="pricing-card p-8 fade-in" style="animation-delay: 0.4s">
                <div class="mb-6">
                    <h3 class="text-2xl font-bold mb-2">Enterprise</h3>
                    <p class="text-gray-400">For large organizations</p>
                </div>
                <div class="mb-8">
                    <span class="text-4xl font-bold">PKR 25,000</span>
                    <span class="text-gray-400">/month</span>
                </div>
                <button class="w-full py-3 px-4 border border-blue-500 text-blue-400 font-medium rounded-lg hover:bg-blue-900 hover:bg-opacity-20 transition-all mb-8">
                    Get Started
                </button>
                <ul class="space-y-4">
                    <li class="feature-item flex items-center">
                        <i class="fas fa-check-circle text-green-400 mr-3"></i>
                        <span>Unlimited stalls</span>
                    </li>
                    <li class="feature-item flex items-center">
                        <i class="fas fa-check-circle text-green-400 mr-3"></i>
                        <span>Premium analytics</span>
                    </li>
                    <li class="feature-item flex items-center">
                        <i class="fas fa-check-circle text-green-400 mr-3"></i>
                        <span>24/7 priority support</span>
                    </li>
                    <li class="feature-item flex items-center">
                        <i class="fas fa-check-circle text-green-400 mr-3"></i>
                        <span>Custom reporting</span>
                    </li>
                    <li class="feature-item flex items-center">
                        <i class="fas fa-check-circle text-green-400 mr-3"></i>
                        <span>Dedicated account manager</span>
                    </li>
                </ul>
            </div>
        </div>

        <!-- FAQ Section -->
        <div class="max-w-4xl mx-auto mb-20 fade-in" style="animation-delay: 0.5s">
            <h2 class="text-3xl font-bold text-center mb-12 glow-text">
                Frequently <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-500">Asked Questions</span>
            </h2>

            <div class="space-y-4">
                <!-- FAQ Item 1 -->
                <div class="customer-card p-6">
                    <details class="group">
                        <summary class="flex justify-between items-center cursor-pointer">
                            <h3 class="text-lg font-medium">Can I change plans later?</h3>
                            <span class="transition group-open:rotate-180">
                                <i class="fas fa-chevron-down text-blue-400"></i>
                            </span>
                        </summary>
                        <p class="mt-3 text-gray-300">
                            Yes, you can upgrade or downgrade your plan at any time. Your billing will be prorated based on your usage.
                        </p>
                    </details>
                </div>

                <!-- FAQ Item 2 -->
                <div class="customer-card p-6">
                    <details class="group">
                        <summary class="flex justify-between items-center cursor-pointer">
                            <h3 class="text-lg font-medium">Is there a free trial available?</h3>
                            <span class="transition group-open:rotate-180">
                                <i class="fas fa-chevron-down text-blue-400"></i>
                            </span>
                        </summary>
                        <p class="mt-3 text-gray-300">
                            We offer a 14-day free trial for all new customers. No credit card required to start your trial.
                        </p>
                    </details>
                </div>

                <!-- FAQ Item 3 -->
                <div class="customer-card p-6">
                    <details class="group">
                        <summary class="flex justify-between items-center cursor-pointer">
                            <h3 class="text-lg font-medium">What payment methods do you accept?</h3>
                            <span class="transition group-open:rotate-180">
                                <i class="fas fa-chevron-down text-blue-400"></i>
                            </span>
                        </summary>
                        <p class="mt-3 text-gray-300">
                            We accept all major credit cards, bank transfers, and JazzCash/EasyPaisa for Pakistani customers.
                        </p>
                    </details>
                </div>
            </div>
        </div>

        <!-- CTA Section -->
        <div class="text-center fade-in" style="animation-delay: 0.6s">
            <h2 class="text-3xl font-bold mb-6 glow-text">Still have questions?</h2>
            <p class="text-xl text-gray-300 max-w-2xl mx-auto mb-8">Our team is ready to help you choose the perfect plan for your needs.</p>
            <button class="px-8 py-4 bg-gradient-to-r from-blue-500 to-purple-600 text-white font-bold rounded-xl hover:from-blue-600 hover:to-purple-700 transition-all transform hover:scale-105 shadow-lg">
                Contact Sales
                <i class="fas fa-envelope ml-2"></i>
            </button>
        </div>
    </div>

    <script>
        // Toggle switch functionality
        document.getElementById('toggle').addEventListener('change', function() {
            const monthlyPrices = document.querySelectorAll('.monthly-price');
            const annualPrices = document.querySelectorAll('.annual-price');

            if(this.checked) {
                monthlyPrices.forEach(price => price.style.display = 'none');
                annualPrices.forEach(price => price.style.display = 'inline');
            } else {
                monthlyPrices.forEach(price => price.style.display = 'inline');
                annualPrices.forEach(price => price.style.display = 'none');
            }
        });

        // Animation trigger
        document.addEventListener('DOMContentLoaded', function() {
            // This would be more comprehensive in a real implementation
            console.log('Pricing page loaded');
        });
    </script>
</body>
</html>